<div class=question data-id="{{Id}}" data-department="{{DepartmentId}}" data-quiz="{{QuizId}}">
    
    <div class="row">
        <div class="col-sm-10">
            <h4>{{QuestionNumber}}. {{QuestionText}}</h4>
        </div>
        <div class="col-sm-2">
            <div class="buttonRight">
                <button class="btn btn-success btn-sm editQuestion" data-id="{{Id}}" title="Edit this question"><span class="glyphicon glyphicon-edit"></span></button>
                <span class="glyphicon glyphicon-move moveBlock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <p class="answers">Answers:</p>
            <div class="answerList">
                {{#listAnswers this}}
                <div class="col-sm-6 answer">{{plusOne index}}. {{{answerText}}}</div>
                {{/listAnswers}}
            </div>
        </div>
    </div>
    {{#if IncorrectMessage }} <p class="incorrectMessage"><strong>Response if incorrect:</strong> {{IncorrectMessage}}{{/if}}
</div>