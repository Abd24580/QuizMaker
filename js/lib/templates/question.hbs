<div class=question data-id="{{Id}}" data-department="{{DepartmentId}}" data-quiz="{{QuizId}}">
    <div class="row">
        <div class="col-sm-9">
            <h4>{{QuestionNumber}}. {{QuestionText}}</h4>
        </div>
        <div class="col-sm-3">
            <button class="btn btn-success btn-sm editQuestion" data-id="{{Id}}"><span class="glyphicon glyphicon-edit"></span></button>
            <button class="btn btn-danger btn-sm deleteQuestion" data-id="{{Id}}"><span class="glyphicon glyphicon-remove"></span></button>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <p class="answers">Answers:</p>
            <div class="answerList">
                {{#listAnswers this}}
                <div class="row">{{{answerText}}}</div>
                {{/listAnswers}}
            </div>
        </div>
    </div>
    <p class="incorrectMessage"><strong>Answer if incorrect:</strong> {{IncorrectMessage}}
</div>